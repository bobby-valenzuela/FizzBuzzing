#include <stdio.h>

void format(int num, char* text ){
    printf("number= %d %s\n", num, text);
}

int main(void)
{
    int i;
    for(i=1; i<=100; i++)
    {
        if( ((i%3)||(i%5) )== 0) format(i, "FizzBuzz");
        else if((i%3)==0) 	 format(i, "Fizz");
        else if((i%5)==0)	 format(i, "Buzz");
	else	       		 format(i, "FizzBuzz");

    }

    return 0;
}
